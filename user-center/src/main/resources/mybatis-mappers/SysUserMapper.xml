<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cloud.user.dao.SysUserDao">

	<sql id="where">
		<where>
			<if test="username != null and username != ''">
				<bind name="_username" value="'%' + username + '%'"/>
				and t.username like #{_username}
			</if>
			<if test="nickname != null and nickname != ''">
				<bind name="_nickname" value="'%' + nickname + '%'"/>
				and t.nickname like #{_nickname}
			</if>
			<if test="enabled != null and enabled != ''">
				and t.enabled = #{enabled}
			</if>
			<if test="type != null and type != ''">
				and t.type = #{type}
			</if>
		</where>
	</sql>
	<select id="count" resultType="java.lang.Integer">
		select count(*) from sys_user t
		<include refid="where" />
	</select>

	<select id="findData" resultType="SysUser">
		select * from sys_user t
		<include refid="where" />
		order by t.id desc
		limit #{start}, #{length}
	</select>
</mapper>